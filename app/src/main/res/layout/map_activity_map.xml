<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    android:fitsSystemWindows="true"
    tools:context=".activities.ActivityQRCode">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"

            android:fitsSystemWindows="true"
            android:src="@drawable/logostrip"
            >

        </ImageView>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/stripfloorplan"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/LLreachexhibitors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="118dp"
                    android:layout_height="88dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/floorplan"
                    android:background="@color/textcolorstona"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.50"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Floor Plan of the Exhibition"
                        android:textColor="#fff"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="Click Here"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>
                  <!--  <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Coming soon..."
                        android:textColor="@color/textcolorstona"
                        android:textSize="25dp"
                        android:textStyle="bold" />
-->

                    <!--    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(Floor Plan)"
                            android:textColor="@color/base"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            />-->


                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/stripreachvenue" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="horizontal"

                >


                <ImageView
                    android:id="@+id/imggooglemap"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/sgooglemap" />


                <!--<ImageView
                    android:id="@+id/imgola"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ola"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>


                <ImageView
                    android:id="@+id/imguber"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:background="@drawable/uber"
                    />
-->
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Easy direction to the venue"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="at your fingertips."
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <!--                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Paid Cab services available"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="20dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="to make your travel comfortable."
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="20dp"/>-->


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


