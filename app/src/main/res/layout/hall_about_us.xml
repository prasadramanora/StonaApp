<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logostrip"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"

                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/stripaboutus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azcompanynameinfo"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:linksClickable="true"
                android:textColorLink="#3F51B5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azcontactpersonname"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:linksClickable="true"
                android:textColorLink="#3F51B5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azdesignamtion"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:linksClickable="true"
                android:textColorLink="#3F51B5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/aztelephone"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:linksClickable="true"
                android:textColorLink="#3F51B5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azmobile"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:linksClickable="true"
                android:textColorLink="#3F51B5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azemail"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:linksClickable="true"
                android:textColorLink="#3F51B5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azwebsite"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:textColorLink="#3F51B5"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azcompanyname"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azcity"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azcountry"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"


                />









            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/azcompanyprofile"
                android:textColor="#fff"
                android:textSize="@dimen/sub_text_size"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:linksClickable="true"
                android:textColorLink="#3F51B5"/>



        </LinearLayout>


    </ScrollView>

</RelativeLayout>

